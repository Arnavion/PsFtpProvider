<Types>
	<Type>
		<Name>System.Net.FtpClient.FtpListItem</Name>
		<Members>
			<ScriptProperty>
				<Name>Mode</Name>
				<GetScriptBlock>
					[string] $result = ''

					if ($this.Type -eq [System.Net.FtpClient.FtpFileSystemObjectType]::Directory) {
						$result += 'd'
					}
					else {
						$result += '-'
					}

					if ($this.OwnerPermissions -band [System.Net.FtpClient.FtpPermission]::Read) {
						$result += 'r'
					}
					else {
						$result += '-'
					}

					if ($this.OwnerPermissions -band [System.Net.FtpClient.FtpPermission]::Write) {
						$result += 'w'
					}
					else {
						$result += '-'
					}

					if ($this.OwnerPermissions -band [System.Net.FtpClient.FtpPermission]::Execute) {
						$result += 'x'
					}
					else {
						$result += '-'
					}

					if ($this.GroupPermissions -band [System.Net.FtpClient.FtpPermission]::Read) {
						$result += 'r'
					}
					else {
						$result += '-'
					}

					if ($this.GroupPermissions -band [System.Net.FtpClient.FtpPermission]::Write) {
						$result += 'w'
					}
					else {
						$result += '-'
					}

					if ($this.GroupPermissions -band [System.Net.FtpClient.FtpPermission]::Execute) {
						$result += 'x'
					}
					else {
						$result += '-'
					}

					if ($this.OthersPermissions -band [System.Net.FtpClient.FtpPermission]::Read) {
						$result += 'r'
					}
					else {
						$result += '-'
					}

					if ($this.OthersPermissions -band [System.Net.FtpClient.FtpPermission]::Write) {
						$result += 'w'
					}
					else {
						$result += '-'
					}

					if ($this.OthersPermissions -band [System.Net.FtpClient.FtpPermission]::Execute) {
						$result += 'x'
					}
					else {
						$result += '-'
					}

					$result
				</GetScriptBlock>
			</ScriptProperty>
			<MemberSet>
				<Name>PSStandardMembers</Name>
				<Members>
					<PropertySet>
						<Name>DefaultDisplayPropertySet</Name>
						<ReferencedProperties>
							<Name>Mode</Name>
							<Name>Modified</Name>
							<Name>Size</Name>
							<Name>Name</Name>
						</ReferencedProperties>
					</PropertySet>
				</Members>
			</MemberSet>
		</Members>
	</Type>
</Types>
